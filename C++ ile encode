#include <iostream>
using namespace std;

int main() {
	int i,x;
	char str[75];

	cout << "Encryptlemek yada Decryptlemek istediğiniz cümleyi giriniz : " << endl;
	cin >> str;

	cout << "Lütfen Encrypt yada Decrypt işlemlerinden birisini seçiniz." << endl;
	cout << "Encrytplemek için 1'e, " << endl;
	cout << "Decryptlemek için 2'ye basınız. " << endl;
	cin >> x;
	
	if(x==1) {
		for(i=0; (i<75 && str[i]!='\0'); i++){
				str[i]=str[i]+2;
				cout << "\n Encryptlenmiş cümle :" << str << endl;
			break;
		}
	}
	else if(x==2) {
		for(i=0; (i<75 && str[i]!='\0');i++) {
			str[i]=str[i]-2;
			cout<< "\n Decryptlenmiş cümle : " << str << endl;
		break;
		}	
	}	
	else{
		cout<< "yanlıs gırdınz" << endl;
	}
	return 0;
}
