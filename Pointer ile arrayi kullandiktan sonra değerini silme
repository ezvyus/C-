#include <iostream>
using namespace std;

int main() {

	int *ptr;
	int size;

	cout << "Saklayacağnız değer sayısı : " << endl;
	cin >> size;

	ptr = new int[size];
	for (int i = 0 ; i < size ; i++) {
		cout << "Değer giriniz : " << endl;
		cin >> ptr[i];
	}
	for(int i = 0 ; i < size ; i++) {
		cout << "Değer : " << ptr[i] << endl;
	}
	delete [] ptr;
}
