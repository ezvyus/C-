#include <iostream>
using namespace std;


class Employee {
private:
	string name;
	int salary;
	int id;

public:
	Employee() {
		this->name = "Bilgi yok";
		this->salary = 0;
		this->id = 0;
	}

	Employee(string name, long long int salary) {
		this->name = name;
		this->salary  = salary;
		this->id = 0;
	}

	Employee(string name, int salary, int id) {
		this->name = name;
		this->salary = salary;
		this->id = id;
	}
	void showinfos(){
		cout<< "Kisinin ismi : " << name << endl;
		cout << "Kisiinin maasi : " << salary << endl;
		cout << "Kisinin kimligi : " << id << endl;
	}
};


int main() {

	Employee employee1("Hakan", 2500, 12312084423);
	Employee employee2("Kuzey", 2,5);
	Employee employee3;


	employee1.showinfos();
	employee2.showinfos();
	employee3.showinfos();

	return 0;
}
