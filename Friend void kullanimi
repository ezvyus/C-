#include <iostream>
using namespace std;

class Employee {
private:
	int salary;
	int age;
	string name;
public:
	Employee(string name, int salary, int age) {
		this->name = name;
		this->age = age;
		this->salary = salary;
	}
	friend void showInfos(Employee employee);
};

void showInfos(Employee employee) {
	cout << employee.name << " " << employee.age << " " << employee.salary << endl;
}

int main() {
	Employee employee("Hakan", 17, 0);

	showInfos(employee);
	return 0;
}
